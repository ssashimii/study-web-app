generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String         @unique
  password     String
  academic     Int
  interests    String
  studyEnv     String
  availability Availability[]
  courses      Course[]
  createdAt    DateTime       @default(now())
}

model Availability {
  id     Int    @id @default(autoincrement())
  day    String
  from   String
  to     String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

model Course {
  id     Int    @id @default(autoincrement())
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}
